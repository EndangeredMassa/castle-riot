module.exports = class DisconnectView
  constructor: ->
    @backdrop = $ '<div class="backdrop"></div>'
    @el = @disconnectMessage()
    $('body').append @backdrop, @el
    @open()

  disconnectMessage: ->
    $ """
      <div id='disconnect-message' class='instructions'>
        <h1>You&#39;ve been disconnected.</h1>
        <p>You were idle for too long.</p>
        <p><a id='reconnect' href='#{window.location}'>Click here</a> to reconnect.</p>
      </div>
      """
  open: ->
    @backdrop.show()
    @el.show()
